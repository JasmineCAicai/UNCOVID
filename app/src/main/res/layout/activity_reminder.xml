<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_1"
    tools:context=".ReminderActivity">

    <ImageButton
        android:id="@+id/remBack1Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/back_1" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/amiko"
        android:text="@string/health_reminder"
        android:textColor="@color/text_1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/remBack1Btn"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/needToDo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:outlineAmbientShadowColor="@color/background_2"
        android:outlineSpotShadowColor="@color/background_2"
        app:cardCornerRadius="23dp"
        app:cardElevation="20dp"
        app:contentPaddingBottom="40dp"
        app:contentPaddingLeft="20dp"
        app:contentPaddingRight="20dp"
        app:contentPaddingTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amiko"
            android:text="Need To Do"
            android:textColor="@color/text_7"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/amiko"
            android:text="Vaccination"
            android:textColor="@color/text_5"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="58dp"
            app:srcCompat="@mipmap/yimiao_5" />

        <RadioButton
            android:id="@+id/remVacBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="45dp"
            android:checked="false" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="110dp"
            android:fontFamily="@font/amiko"
            android:text="Nucleic acid test"
            android:textColor="@color/text_5"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="108dp"
            app:srcCompat="@mipmap/microscope" />

        <RadioButton
            android:id="@+id/remNucBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="95dp"
            android:checked="false" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="158dp"
            app:srcCompat="@mipmap/temperature" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="160dp"
            android:fontFamily="@font/amiko"
            android:text="Take my temperature"
            android:textColor="@color/text_5"
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/remTemBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="145dp"
            android:checked="false" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/needToKnow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:outlineAmbientShadowColor="@color/background_2"
        android:outlineSpotShadowColor="@color/background_2"
        app:cardCornerRadius="23dp"
        app:cardElevation="20dp"
        app:contentPaddingBottom="40dp"
        app:contentPaddingLeft="20dp"
        app:contentPaddingRight="150dp"
        app:contentPaddingTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/needToDo">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amiko"
            android:text="Need To Know"
            android:textColor="@color/text_7"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/knowCorBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/amiko"
            android:text="Coronavirus"
            android:textColor="@color/text_5"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="58dp"
            app:srcCompat="@mipmap/coronavirus" />

        <TextView
            android:id="@+id/knowAvoidBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="110dp"
            android:fontFamily="@font/amiko"
            android:text="How to avoid"
            android:textColor="@color/text_5"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="108dp"
            app:srcCompat="@mipmap/avoid" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="158dp"
            app:srcCompat="@mipmap/treat" />

        <TextView
            android:id="@+id/knowTreatBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="160dp"
            android:fontFamily="@font/amiko"
            android:text="How to treat"
            android:textColor="@color/text_5"
            android:textSize="17sp" />

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>